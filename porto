    <!-- Project Modal -->
    <div id="projectModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">
        <div class="bg-white rounded-xl p-6 max-w-3xl w-full mx-4 relative max-h-screen overflow-y-auto">
            <button onclick="closeProjectModal()" class="absolute top-4 right-4 text-gray-500 hover:text-gray-700 z-10">
                <i data-feather="x"></i>
            </button>
            <div class="mb-6">
                <h3 id="projectModalTitle" class="text-3xl font-bold text-green-800 mb-4"></h3>
                
                <!-- Carousel Container -->
                <div class="carousel-container h-64 md:h-96 mb-4 relative draggable" id="carouselContainer">
                    <div class="carousel-wrapper" id="carouselWrapper">
                        <!-- Images will be dynamically added here -->
                    </div>
                </div>
                
                <!-- Carousel Controls -->
                <div id="carouselControls" class="carousel-controls hidden">
                    <button class="carousel-btn" id="prevBtn" onclick="previousSlide()" title="Previous">
                        <i data-feather="chevron-left"></i>
                    </button>
                    <div class="carousel-indicators" id="carouselIndicators"></div>
                    <button class="carousel-btn" id="nextBtn" onclick="nextSlide()" title="Next">
                        <i data-feather="chevron-right"></i>
                    </button>
                </div>
                
                <div class="carousel-counter text-center mt-2" id="carouselCounter"></div>
                
                <p id="projectModalDescription" class="text-gray-700 text-lg leading-relaxed mb-6 mt-6"></p>
                <div id="projectModalTags" class="flex flex-wrap gap-2 mb-6"></div>
            </div>
            <div class="flex justify-center">
