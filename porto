    <script>
        function showCertificateModal(title, subtitle, imageUrl) {
            document.getElementById('modalTitle').textContent = title;
            document.getElementById('modalSubtitle').textContent = subtitle;
            document.getElementById('modalImage').src = imageUrl;
            document.getElementById('certificateModal').classList.remove('hidden');
            feather.replace();
        }

        function closeCertificateModal() {
            document.getElementById('certificateModal').classList.add('hidden');
        }

        function showPDFModal(title, subtitle, pdfUrl) {
            document.getElementById('pdfViewer').src = pdfUrl;
            document.getElementById('pdfDownloadBtn').href = pdfUrl;
            document.getElementById('pdfModal').classList.remove('hidden');
            feather.replace();
        }

        function closePDFModal() {
            document.getElementById('pdfModal').classList.add('hidden');
            document.getElementById('pdfViewer').src = '';
        }

        function showProjectModal(title, description, images, tags) {
            // Store current slide index
            window.currentSlide = 0;
            window.projectImages = Array.isArray(images) ? images : [images];
            
            document.getElementById('projectModalTitle').textContent = title;
            document.getElementById('projectModalDescription').textContent = description;
            
            // Build carousel
            const carouselWrapper = document.getElementById('carouselWrapper');
            carouselWrapper.innerHTML = window.projectImages.map((img, index) => 
                `<div class="carousel-slide h-64 md:h-96"><img src="${img}" alt="Project image ${index + 1}" class="w-full h-full object-cover"></div>`
            ).join('');
            
            // Reset carousel position
            carouselWrapper.style.transform = 'translateX(0)';
            
            // Build indicators
            const indicatorsContainer = document.getElementById('carouselIndicators');
            indicatorsContainer.innerHTML = window.projectImages.map((_, index) => 
                `<div class="carousel-dot ${index === 0 ? 'active' : ''}" onclick="goToSlide(${index})"></div>`
            ).join('');
            
            // Update counter
            document.getElementById('carouselCounter').textContent = `${window.currentSlide + 1} / ${window.projectImages.length}`;
            
            // Show/hide controls based on number of images
            const controls = document.getElementById('carouselControls');
            if (window.projectImages.length > 1) {
                controls.classList.remove('hidden');
                updateCarouselButtons();
            } else {
                controls.classList.add('hidden');
            }
            
            // Generate tags HTML
            const tagsContainer = document.getElementById('projectModalTags');
            tagsContainer.innerHTML = tags.map(tag => 
                `<span class="px-3 py-1 bg-green-200 text-green-800 text-sm rounded-full">${tag}</span>`
            ).join('');
            
            document.getElementById('projectModal').classList.remove('hidden');
            feather.replace();
        }

        function updateCarouselSlide() {
            const wrapper = document.getElementById('carouselWrapper');
            wrapper.style.transform = `translateX(-${window.currentSlide * 100}%)`;
            
            // Update indicators
            document.querySelectorAll('.carousel-dot').forEach((dot, index) => {
                dot.classList.toggle('active', index === window.currentSlide);
            });
            
            // Update counter
            document.getElementById('carouselCounter').textContent = `${window.currentSlide + 1} / ${window.projectImages.length}`;
            
            // Render PDF page if PDF is loaded
            if (window.projectPDFDoc) {
                const canvasId = `pdfPage${window.currentSlide + 1}`;
                const canvas = document.getElementById(canvasId);
                if (canvas && canvas.width === 0) {
                    renderPDFPage(window.projectPDFDoc, window.currentSlide + 1, canvasId);
                }
            }
            
            updateCarouselButtons();
        }

        function updateCarouselButtons() {
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            const prevBtnOverlay = document.getElementById('prevBtnOverlay');
            const nextBtnOverlay = document.getElementById('nextBtnOverlay');
            
            const isDisabledPrev = window.currentSlide === 0;
            const isDisabledNext = window.currentSlide === window.projectImages.length - 1;
            
            if (prevBtn) prevBtn.disabled = isDisabledPrev;
            if (nextBtn) nextBtn.disabled = isDisabledNext;
            if (prevBtnOverlay) prevBtnOverlay.disabled = isDisabledPrev;
            if (nextBtnOverlay) nextBtnOverlay.disabled = isDisabledNext;
        }

        function nextSlide() {
            if (window.currentSlide < window.projectImages.length - 1) {
                window.currentSlide++;
                updateCarouselSlide();
            }
        }

        function previousSlide() {
            if (window.currentSlide > 0) {
                window.currentSlide--;
                updateCarouselSlide();
            }
        }

        function goToSlide(index) {
            window.currentSlide = index;
            updateCarouselSlide();
        }

        function closeProjectModal() {
            document.getElementById('projectModal').classList.add('hidden');
        }

        async function showPDFProjectModal(title, description, filePath, tags) {
            try {
                // Check if file is PDF or other format
                const isPDF = filePath.toLowerCase().endsWith('.pdf');
                const isTableau = filePath.toLowerCase().endsWith('.twb') || filePath.toLowerCase().endsWith('.twbx');
                
                document.getElementById('projectModalTitle').textContent = title;
                document.getElementById('projectModalDescription').textContent = description;
                
                const carouselWrapper = document.getElementById('carouselWrapper');
                const indicatorsContainer = document.getElementById('carouselIndicators');
                const controls = document.getElementById('carouselControls');
                
                // Generate tags
                const tagsContainer = document.getElementById('projectModalTags');
                tagsContainer.innerHTML = tags.map(tag => 
                    `<span class="px-3 py-1 bg-green-200 text-green-800 text-sm rounded-full">${tag}</span>`
                ).join('');
                
                if (isPDF) {
                    // Handle PDF files
                    const pdf = await pdfjsLib.getDocument(filePath).promise;
                    const numPages = pdf.numPages;
                    
                    window.projectPDFDoc = pdf;
                    window.projectCurrentPage = 1;
                    window.projectPDFPath = filePath;
                    
                    carouselWrapper.innerHTML = Array.from({length: numPages}, (_, i) => 
                        `<div class="carousel-slide h-64 md:h-96 bg-gray-100 flex items-center justify-center"><canvas id="pdfPage${i + 1}" class="max-w-full max-h-full"></canvas></div>`
                    ).join('');
                    
                    window.currentSlide = 0;
                    window.projectImages = Array.from({length: numPages});
                    carouselWrapper.style.transform = 'translateX(0)';
                    
                    indicatorsContainer.innerHTML = Array.from({length: numPages}, (_, index) => 
                        `<div class="carousel-dot ${index === 0 ? 'active' : ''}" onclick="goToSlide(${index})"></div>`
                    ).join('');
                    
                    if (numPages > 1) {
                        controls.classList.remove('hidden');
                    } else {
                        controls.classList.add('hidden');
                    }
                    
                    document.getElementById('carouselCounter').textContent = `${window.currentSlide + 1} / ${numPages}`;
                    
                    await renderPDFPage(pdf, 1, 'pdfPage1');
                    
                    for (let i = 2; i <= numPages; i++) {
                        setTimeout(() => renderPDFPage(pdf, i, `pdfPage${i}`), i * 100);
                    }
                } else if (isTableau) {
                    // Handle Tableau files with fallback message
                    carouselWrapper.innerHTML = `
                        <div class="carousel-slide h-64 md:h-96 bg-gradient-to-br from-blue-50 to-green-50 flex flex-col items-center justify-center p-6 text-center">
                            <svg class="w-16 h-16 text-blue-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <h4 class="text-lg font-bold text-gray-800 mb-2">Tableau Dashboard File</h4>
                            <p class="text-gray-600 text-sm mb-4">${filePath}</p>
                            <a href="${filePath}" download class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition inline-block">
                                <i data-feather="download" class="w-4 h-4 inline mr-2"></i>Download File
                            </a>
                            <p class="text-xs text-gray-500 mt-4">This is a Tableau file. Open it with Tableau Desktop or Tableau Public to view the interactive dashboard.</p>
                        </div>
                    `;
                    
                    window.currentSlide = 0;
                    window.projectImages = [filePath];
                    carouselWrapper.style.transform = 'translateX(0)';
                    
                    indicatorsContainer.innerHTML = '';
                    controls.classList.add('hidden');
                    document.getElementById('carouselCounter').textContent = '1 / 1';
                } else {
                    // Handle other file types
                    carouselWrapper.innerHTML = `
                        <div class="carousel-slide h-64 md:h-96 bg-gray-100 flex flex-col items-center justify-center p-6 text-center">
                            <svg class="w-16 h-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4v2m0 4v2M12 5a7 7 0 110 14 7 7 0 010-14zm0 1a6 6 0 100 12 6 6 0 000-12z"></path>
                            </svg>
                            <h4 class="text-lg font-bold text-gray-700 mb-2">File Format</h4>
                            <p class="text-gray-600 text-sm mb-4">${filePath}</p>
                            <a href="${filePath}" download class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition inline-block">
                                <i data-feather="download" class="w-4 h-4 inline mr-2"></i>Download
                            </a>
                        </div>
                    `;
                    
                    window.currentSlide = 0;
                    window.projectImages = [filePath];
                    carouselWrapper.style.transform = 'translateX(0)';
                    
                    indicatorsContainer.innerHTML = '';
                    controls.classList.add('hidden');
                    document.getElementById('carouselCounter').textContent = '1 / 1';
                }
                
                document.getElementById('projectModal').classList.remove('hidden');
                feather.replace();
                
            } catch (error) {
                console.error('Error loading file:', error);
                // Show error message in modal
                document.getElementById('projectModalTitle').textContent = title;
                document.getElementById('projectModalDescription').textContent = description;
                
                const carouselWrapper = document.getElementById('carouselWrapper');
                carouselWrapper.innerHTML = `
                    <div class="carousel-slide h-64 md:h-96 bg-red-50 flex flex-col items-center justify-center p-6 text-center">
                        <svg class="w-16 h-16 text-red-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4v.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <h4 class="text-lg font-bold text-red-700 mb-2">Error Loading File</h4>
                        <p class="text-red-600 text-sm">Unable to load the requested file. Please try again or contact support.</p>
                    </div>
                `;
                
                document.getElementById('carouselIndicators').innerHTML = '';
                document.getElementById('carouselControls').classList.add('hidden');
                document.getElementById('carouselCounter').textContent = '1 / 1';
                
                document.getElementById('projectModal').classList.remove('hidden');
                feather.replace();
            }
        }

        async function renderPDFPage(pdf, pageNum, canvasId) {
            try {
                const canvas = document.getElementById(canvasId);
                if (!canvas) return;
                
                const page = await pdf.getPage(pageNum);
                const scale = 2;
                const viewport = page.getViewport({ scale });
                
                canvas.width = viewport.width;
                canvas.height = viewport.height;
                
                const context = canvas.getContext('2d');
                const renderContext = {
                    canvasContext: context,
                    viewport: viewport
                };
                
                await page.render(renderContext).promise;
            } catch (error) {
                console.error(`Error rendering PDF page ${pageNum}:`, error);
            }
        }

        // Close modal when clicking outside of it
        document.addEventListener('click', function(event) {
            const projectModal = document.getElementById('projectModal');
            const certificateModal = document.getElementById('certificateModal');
            const pdfModal = document.getElementById('pdfModal');
            
            if (event.target === projectModal) {
                closeProjectModal();
            }
            if (event.target === certificateModal) {
                closeCertificateModal();
            }
            if (event.target === pdfModal) {
                closePDFModal();
            }
        });

        // Carousel Drag/Swipe Functionality
        let dragStartX = 0;
        let dragStartY = 0;
        let isDragging = false;
        let dragOffsetX = 0;

        function initCarouselDrag() {
            const carouselContainer = document.getElementById('carouselContainer');
            if (!carouselContainer) return;

            carouselContainer.addEventListener('mousedown', startDrag);
            carouselContainer.addEventListener('touchstart', startDrag);
            document.addEventListener('mousemove', moveDrag);
            document.addEventListener('touchmove', moveDrag);
            document.addEventListener('mouseup', endDrag);
            document.addEventListener('touchend', endDrag);
        }

        function startDrag(e) {
            isDragging = true;
            
            if (e.type.includes('touch')) {
                dragStartX = e.touches[0].clientX;
                dragStartY = e.touches[0].clientY;
            } else {
                dragStartX = e.clientX;
                dragStartY = e.clientY;
            }
            dragOffsetX = 0;

            const carouselContainer = document.getElementById('carouselContainer');
            const wrapper = document.getElementById('carouselWrapper');
            
            carouselContainer.classList.add('dragging');
            wrapper.classList.add('no-transition');
        }

        function moveDrag(e) {
            if (!isDragging) return;
            e.preventDefault();

            let currentX;
            if (e.type.includes('touch')) {
                currentX = e.touches[0].clientX;
            } else {
                currentX = e.clientX;
            }
            
            dragOffsetX = currentX - dragStartX;

            const wrapper = document.getElementById('carouselWrapper');
            const offsetPercentage = (dragOffsetX / window.innerWidth) * 50;
            wrapper.style.transform = `translateX(calc(-${window.currentSlide * 100}% + ${offsetPercentage}px))`;
        }

        function endDrag(e) {
            if (!isDragging) return;
            e.preventDefault();
            isDragging = false;

            const wrapper = document.getElementById('carouselWrapper');
            const carouselContainer = document.getElementById('carouselContainer');
            
            wrapper.classList.remove('no-transition');
            carouselContainer.classList.remove('dragging');

            const threshold = 50;

            if (dragOffsetX > threshold) {
                previousSlide();
            } else if (dragOffsetX < -threshold) {
                nextSlide();
            } else {
                updateCarouselSlide();
            }
        }

        // Initialize carousel drag on page load
        setTimeout(() => {
            initCarouselDrag();
        }, 100);

        // Function to render PDF thumbnails
        async function renderPDFThumbnail(pdfPath, canvasId) {
            try {
                const canvas = document.getElementById(canvasId);
                if (!canvas) return;

                // Load PDF
                const pdf = await pdfjsLib.getDocument(pdfPath).promise;
                const page = await pdf.getPage(1);

                // Set canvas dimensions
                const scale = 2;
                const viewport = page.getViewport({ scale });
                canvas.width = viewport.width;
                canvas.height = viewport.height;

                // Render page to canvas
                const context = canvas.getContext('2d');
                const renderContext = {
                    canvasContext: context,
                    viewport: viewport
                };
                await page.render(renderContext).promise;
            } catch (error) {
                console.error(`Error rendering PDF ${pdfPath}:`, error);
                // Fallback: show text on canvas
                const canvas = document.getElementById(canvasId);
                if (canvas) {
                    const context = canvas.getContext('2d');
                    canvas.width = 640;
                    canvas.height = 360;
                    context.fillStyle = '#e5e7eb';
                    context.fillRect(0, 0, canvas.width, canvas.height);
                    context.fillStyle = '#6b7280';
                    context.font = '20px sans-serif';
                    context.textAlign = 'center';
                    context.fillText('PDF Preview', canvas.width / 2, canvas.height / 2 - 20);
                    context.fillText('(Click to view full document)', canvas.width / 2, canvas.height / 2 + 20);
                }
            }
        }

        // Render all PDF thumbnails on page load
        window.addEventListener('load', () => {
            renderPDFThumbnail('vix-completion-certificate-44667IAPMGII372022.pdf', 'pdfCanvas1');
            renderPDFThumbnail('Databases.pdf', 'pdfCanvas2');
            renderPDFThumbnail('Excel 2019 Expert.pdf', 'pdfCanvas3');
            renderPDFThumbnail('Data Analytics.pdf', 'pdfCanvas4');
        });

        feather.replace();

        // Initialize ScrollReveal for various elements with comprehensive animations
        const sr = ScrollReveal({
            duration: 800,
            easing: 'ease-out',
            distance: '60px'
        });

        // Reveal headings from top
        sr.reveal('h2', {
            origin: 'top',
            distance: '40px',
            delay: 100,
            interval: 200
        });

        // Reveal experience cards from bottom with stagger
        sr.reveal('.experience-card', {
            origin: 'bottom',
            distance: '30px',
            delay: 200,
            interval: 150,
            scale: 0.9
        });

        // Reveal project cards with rotate effect
        sr.reveal('.project-card', {
            origin: 'bottom',
            distance: '40px',
            delay: 200,
            interval: 200,
            scale: 0.85,
            rotate: { x: 10, y: 0 }
        });

        // Reveal certificate cards with zoom effect
        sr.reveal('.certificate-card', {
            origin: 'left',
            distance: '30px',
            delay: 200,
            interval: 150,
            scale: 0.9
        });

        // Reveal about section images
        sr.reveal('img', {
            origin: 'right',
            distance: '40px',
            delay: 300,
            scale: 0.95
        });

        // Reveal text paragraphs
        sr.reveal('p', {
            origin: 'bottom',
            distance: '20px',
            delay: 100,
            interval: 50
        });

        // Reveal buttons and forms
        sr.reveal('button, input, textarea', {
            origin: 'bottom',
            distance: '20px',
            delay: 300,
            interval: 100
        });

        // Add fade-in animation to skills tags
        sr.reveal('.bg-green-100, .bg-green-200', {
            origin: 'bottom',
            distance: '15px',
            delay: 150,
            interval: 50
        });
</script>
